<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
    <ListView android:id="@+id/in"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:transcriptMode="alwaysScroll"
    />
    <!--  -->
    <RadioGroup android:id="@+id/car_speed" 
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:contentDescription="速度选择" >
       	 <RadioButton android:layout_width="wrap_content" 
	         android:layout_height="wrap_content" 
	         android:layout_weight="1"
	         android:id="@+id/low" 
	         android:text="低速" />
	     <RadioButton android:layout_width="wrap_content" 
	         android:layout_height="wrap_content" 
	         android:layout_weight="1"
	         android:id="@+id/mid" 
	         android:text="中速" 
	         android:checked="true" />
	     <RadioButton  android:layout_width="wrap_content" 
	         android:layout_height="wrap_content" 
	         android:layout_weight="1"
	         android:id="@+id/high" 
	         android:text="高速" />    
  </RadioGroup>
  
    <Button android:id="@+id/buttton_UP"
    	android:layout_width="fill_parent" 
    	android:layout_height="100px"
    	android:text="前进"   
    />
    <Button android:id="@+id/buttton_LEFT"
    	android:layout_width="fill_parent" 
    	android:layout_height="100px"
    	android:text="向左"   
    />
   <Button android:id="@+id/buttton_RIGHT"
    	android:layout_width="fill_parent" 
    	android:layout_height="100px"
    	android:text="向右"   
    />
   <Button android:id="@+id/buttton_BACK"
    	android:layout_width="fill_parent" 
    	android:layout_height="100px"
    	android:text="后退"   
    />
    <Button android:id="@+id/buttton_STOP"
    	android:layout_width="fill_parent" 
    	android:layout_height="100px"
    	android:text="停止"   
    />
    
         
</LinearLayout>
